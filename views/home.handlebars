                        <div class="row">
                            <label class="columns small-12">Joint Life 2 Person Annuity</label>
                            <div class="columns small-6">
                                <input id="jointLifeCheckBox" type="checkbox">
                            </div>
                        </div>
                        <div class="grid-x grid-margin-x">
                            <div id="secondPersonAge" class=" secondPerson small-6 cell">
                                <label>Second Age
                                    <select name="second-age" type="text">
                                        <option value="empty">Select Age</option>
                                        {{#each ages}}
                                        <option value="{{age}}">{{age}}</option>
                                        {{/each}}
                                    </select>
                                </label>
                            </div>
                            <div id="secondPersonGender" class="secondPerson small-6 cell">
                                <label>Second Gender
                                    <select name="second-gender" type="text">
                                        <option value="empty">Select Gender</option>
                                        <option value="female">Female</option>
                                        <option value="male">Male</option>
                                    </select>
                                </label>
                            </div>
                        </div>
                        <button id='submit-quote-request' type="button" class="primary button expanded submit-button">
                            Get Quotes
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>