<div class="hero-background">
    <div class="grid-container">
        <div class="grid-x grid-margin-x">
            <div class="large-7 small-12 cell">
                <div class="hero-section-text">
                    <h1 class="text-center">Taking Annuity Shopping to the 21st Century</h1>
                    <hr>
                    <h5>We strive to bring you the most accurate and competitive annuity quotes.
                        Unlike other online annuity businesses we do not require a phone number or email. Simply follow
                        these steps:
                    </h5>
                    <ol class="larger-ol">
                        <li>Fill out your annuity preferences</li>
                        <li>Compare personalized annuity quotes</li>
                        <li>Choose the best annuity for you</li>
                    </ol>
                </div>
            </div>
            <div class="large-5 small-12 cell">
                <div class="translucent-form-overlay">

                    <form id="quote-request-form">
                        <h3>Get Immediate Annuity Quotes</h3>
                        <div class="row columns">
                            <label>Investment Amount
                                <input type="text" name="principle" value="100000">
                            </label>
                        </div>
                        <div class="grid-x grid-margin-x">

                            <div class="small-6 cell">
                                <label>Income Will Begin:
                                    <select name="start-date" type="text">
                                        {{#each incomeStarts}}
                                        <option value="{{timeInt}}">{{timeString}}</option>
                                        {{/each}}
                                    </select>
                                </label>
                            </div>
                            <div class="small-6 cell">
                                <label>Current Age
                                    <select name="age" type="text">
                                        <option value="empty">Select Age</option>
                                        {{#each ages}}
                                        <option value="{{age}}" {{#ifEquals age 70}}selected="selected" {{/ifEquals}}>
                                            {{age}}</option>
                                        {{/each}}
                                    </select>
                                </label>
                            </div>
                        </div>

                        <div class="grid-x grid-margin-x">

                            <div class="small-6 cell">
                                <label>Gender
                                    <select name="gender" type="text">
                                        <option value="male">Male</option>
                                        <option value="female">Female</option>
                                    </select>
                                </label>
                            </div>
                            <div class="small-6 cell">
                                <label>State
                                    <select name="state" type="text">
                                        {{#each states}}
                                        <option value="{{abbr}}">{{abbr}}</option>
                                        {{/each}}
                                    </select>
                                </label>
                            </div>
                        </div>

